		*==============================================================================
		
		lparameters toMenu, ;
			tcObject
		if This.Style = 0
			with toMenu
				.AddMenuBar('Cu\<t',   "sys(1500, '_MED_CUT',   '_MEDIT')", , , , ;
					'not ' + tcObject + '.Enabled or ' + tcObject + '.ReadOnly', , ;
					'_med_cut')
