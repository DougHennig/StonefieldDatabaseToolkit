		llAdd = '\SFCTRLS.VCX' $ upper(set('CLASSLIB'))
		for each loPage in This.Pages
			if llAdd
				loPage.AddObject('oActivate', 'SFPageActivate')
			else
				loPage.NewObject('oActivate', 'SFPageActivate', 'SFCtrls.vcx')
